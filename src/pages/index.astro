---
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>Eastpointe Management Corp | Coming Soon</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" rel="stylesheet" />
  </head>
  <body class="font-display bg-background-light dark:bg-background-dark">
    <div class="flex flex-col md:flex-row min-h-screen">
      <div class="w-full md:w-1/2 bg-background-light dark:bg-background-light flex items-center justify-center p-8 md:p-12">
        <div class="max-w-xs w-full">
          <div class="w-full max-w-sm">
            <img class="w-full h-auto object-contain" data-alt="Eastpointe Management Corp. Logo with a stylized building icon and wordmark" src="./logo.png" />
          </div>
        </div>
      </div>
      <div class="w-full md:w-1/2 bg-background-dark flex items-center justify-center p-8 md:p-12 flex-1">
        <div class="text-center text-white max-w-md">
          <h1 class="text-5xl md:text-6xl font-bold">Coming Soon</h1>
          <p class="mt-6 text-lg text-gray-300">Our new website is under construction. We are working hard to give you a better experience.</p>
          <div class="mt-10">
            <a
              class="inline-flex items-center justify-center bg-gray-900/50 dark:bg-gray-900/50 hover:bg-gray-900/70 dark:hover:bg-gray-900/70 transition-colors duration-300 py-3 px-6 rounded-lg text-gray-300"
              href="mailto:info@eastpointecorp.com"
            >
              <span class="material-symbols-outlined text-primary mr-3" style="font-size: 20px">mail</span>
              info@eastpointecorp.com
            </a>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
